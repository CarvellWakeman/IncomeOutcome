<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="false"
        android:theme="@style/Base.Theme.AppCompat.Light">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_newIncome_amount"
                android:elevation="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TIL_newIncome_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:theme="@style/Base.Theme.AppCompat.Light">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:imeOptions="actionDone"
                        android:hint="Payment amount"
                        android:maxLines="1"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_newIncome_category"
                android:layout_below="@+id/button_newIncome_date"
                android:elevation="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Category and Source"
                        android:id="@+id/textView_newIncome_category"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="9"
                        android:layout_below="@+id/textView_newIncome_category">

                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_newIncome_categories"
                            android:layout_below="@+id/textView_newIncome_category"
                            android:spinnerMode="dropdown"
                            android:layout_weight="3"
                            android:theme="@style/MaterialTheme"
                            android:backgroundTint="#000000" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/TIL_newIncome_sourcename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6">

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapWords|textMultiLine"
                                android:layout_below="@+id/editText_newIncome_name"
                                android:layout_alignParentStart="true"
                                android:layout_alignEnd="@+id/editText_newIncome_name"
                                android:maxLines="1"
                                android:hint="Source"
                                android:minLines="1"
                                android:maxLength="15" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_newIncome_description"
                android:layout_below="@+id/card_newIncome_split"
                android:elevation="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TIL_newIncome_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:layout_below="@+id/editText_newIncome_name"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/editText_newIncome_name"
                        android:maxLines="4"
                        android:hint="Description"
                        android:minLines="1" />
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frameLayout_timePeriod"></FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>