<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepeatDaily"
    android:theme="@style/Base.Theme.AppCompat.Light">

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_repeatYearly"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:theme="@style/Base.Theme.AppCompat.Light"
        android:layout_toEndOf="@+id/textView_every"
        android:numeric="integer"
        android:text="1"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="Every"
        android:id="@+id/textView_every"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText_repeatYearly"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="year(s) on"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/editText_repeatYearly"
        android:layout_toEndOf="@+id/editText_repeatYearly"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/numberPicker_month"
        android:layout_below="@+id/editText_repeatYearly"
        android:layout_alignParentStart="true"
        android:showDividers="beginning" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/numberPicker_day"
        android:layout_below="@+id/editText_repeatYearly"
        android:layout_toEndOf="@+id/numberPicker_month"
        android:layout_marginLeft="5dp"
        android:showDividers="beginning" />

</RelativeLayout>
