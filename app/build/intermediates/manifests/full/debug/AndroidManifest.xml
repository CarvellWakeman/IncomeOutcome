<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="carvellwakeman.incomeoutcome"
    android:versionCode="8"
    android:versionName="1.0.5" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--
     Required to act as a custom watch face.
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    -->
    <application
        android:name="carvellwakeman.incomeoutcome.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_incomeoutcome"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme" >
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityMain"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Income Outcome"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityDetailsTransaction"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityNewTransaction"
            android:label="@string/title_newtransaction"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivitySettings"
            android:label="@string/title_settings"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityManageProfiles"
            android:label="@string/title_manageprofiles"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityManagePeople"
            android:label="@string/title_managepeople"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityManageCategories"
            android:label="@string/title_managecategories"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.ActivityDatabaseImport"
            android:label="@string/title_importdatabase"
            android:launchMode="singleTop" />
        <activity
            android:name="carvellwakeman.incomeoutcome.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>