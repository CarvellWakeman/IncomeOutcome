<?xml version="1.0" encoding="utf-8"?>
<manifest package="carvellwakeman.incomeoutcome" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Required to act as a custom watch face.
    <uses-permission android:name="android.permission.WAKE_LOCK" /> -->

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name"
        android:theme="@style/MaterialTheme">

        <activity android:name=".ActivityMain" android:label="Income Outcome" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityDetailsIncome" android:label="@string/app_name"
            android:launchMode="singleTop"/>
        <activity android:name=".ActivityDetailsExpense" android:label="@string/app_name"
            android:launchMode="singleTop"/>
        <activity android:name=".ActivityNewExpense" android:label="@string/app_name"
            android:launchMode="singleTop"/>
        <activity android:name=".ActivityNewIncome" android:label="@string/app_name"
            android:launchMode="singleTop"/>
        <activity android:name=".ActivitySettings" android:label="@string/title_settings"
            android:launchMode="singleTop"/>

        <activity android:name=".AndroidDatabaseManager" android:theme="@style/Theme.AppCompat.Light"/>

    </application>

</manifest>