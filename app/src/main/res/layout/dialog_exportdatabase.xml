<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_exportdatabase"
        android:id="@+id/textView_dialogex_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&lt;Directory Path>"
        android:id="@+id/textView_dialogex_directory"
        android:layout_below="@+id/textView_dialogex_title"
        android:layout_alignStart="@+id/linearLayout_dialogin_files"
        android:layout_alignEnd="@+id/linearLayout_dialogin_files"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/linearLayout_dialogin_files"
        android:layout_below="@+id/textView_dialogex_directory"
        android:layout_above="@+id/button_dialogex_positive">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TIL_dialog_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:layout_marginTop="8dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="File Name"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz_-1234567890&lt;>~" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#2195f2"
        android:text="@string/action_cancel"
        android:id="@+id/button_dialogex_negative"
        android:layout_toStartOf="@+id/button_dialogprofiles_positive"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/button_dialogex_positive"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/button_dialogex_positive"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="@style/FlatButtonTheme"
        android:text="@string/action_export"
        android:id="@+id/button_dialogex_positive"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />


    <!--Add new -->

</RelativeLayout>