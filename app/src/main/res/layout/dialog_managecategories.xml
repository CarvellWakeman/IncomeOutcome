<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_editcategory"
        android:id="@+id/textView_dialogcat_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_dialogcat"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/textView_dialogcat_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/circle"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dialogcat_title"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/linearLayout_dialog_editcategory"
        android:layout_above="@+id/button_dialogcat_positive">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_recyclerView_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_dialog_editcategory"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/linearLayout_dialog_newcategory"
        android:visibility="gone"
        android:layout_above="@+id/button_dialogcat_positive">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TIL_dialog_categoryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:layout_marginTop="8dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Category Title"
                android:maxLines="1"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_dialogcat_red"
            app:dsb_progressColor="@color/red"
            app:dsb_indicatorColor="@color/red"
            app:dsb_rippleColor="@color/red"
            app:dsb_value="50"
            app:dsb_min="0"
            app:dsb_max="100"
            app:dsb_indicatorFormatter="%s%%"
            android:layout_marginTop="20dp" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_dialogcat_green"
            app:dsb_progressColor="@color/green"
            app:dsb_indicatorColor="@color/green"
            app:dsb_rippleColor="@color/green"
            app:dsb_value="50"
            app:dsb_min="0"
            app:dsb_max="100"
            app:dsb_indicatorFormatter="%s%%"/>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_dialogcat_blue"
            app:dsb_progressColor="@color/blue"
            app:dsb_indicatorColor="@color/blue"
            app:dsb_rippleColor="@color/blue"
            app:dsb_value="50"
            app:dsb_min="0"
            app:dsb_max="100"
            app:dsb_indicatorFormatter="%s%%" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="@style/FlatButtonTheme"
        android:text="@string/action_new"
        android:id="@+id/button_dialogcat_positive"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#2195f2"
        android:text="@string/action_cancel"
        android:id="@+id/button_dialogcat_negative"
        android:layout_toStartOf="@+id/button_dialogpeople_positive"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/button_dialogcat_positive"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/button_dialogcat_positive"
        android:visibility="visible" />


    <!--Add new -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        style="@style/FlatButtonTheme"
        android:text="@string/action_back"
        android:id="@+id/button_dialogcat_back"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="false"
        android:visibility="gone"
        android:layout_alignBottom="@+id/button_dialogcat_negative" />

</RelativeLayout>