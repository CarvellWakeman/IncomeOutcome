<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/button_prevPeriod"
        android:background="@drawable/ripple_api19"
        android:clickable="true"
        android:padding="@dimen/cardview_default_padding"

        android:visibility="gone">

    <TextView
        android:id="@+id/textView_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/ImageView1"
        android:layout_toStartOf="@+id/divider"
        android:gravity="center_vertical"
        android:text="@string/filter_none"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textColor="@color/gray" />

    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="@color/red" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/textView_filters"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_filters"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>