<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentTimePeriod"
    android:id="@+id/linearLayout_timePeriod_parent">

    <!-- Start Date -->

    <!-- Time Period -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_newExpense_timePeriod"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:contentPadding="@dimen/cardview_default_padding"
        android:layout_marginStart="@dimen/cardview_default_margin"
        android:layout_marginEnd="@dimen/cardview_default_margin"
        android:layout_marginTop="@dimen/cardview_default_margin"
        android:theme="@style/Base.Theme.AppCompat.Light">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_fragmenttp_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:theme="@style/Base.Theme.AppCompat.Light"
                style="@style/RaisedButtonTheme"
                android:text="@string/time_setdate" />

            <Button
                android:id="@+id/button_fragmenttp_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:theme="@style/Base.Theme.AppCompat.Light"
                style="@style/RaisedButtonTheme"
                android:text="@string/repeat"
                android:layout_below="@+id/button_fragmenttp_date"
                android:layout_marginTop="16dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!-- BlackList -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_newExpense_blacklist"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:contentPadding="@dimen/cardview_default_padding"
        android:layout_marginStart="@dimen/cardview_default_margin"
        android:layout_marginEnd="@dimen/cardview_default_margin"
        android:layout_marginTop="@dimen/cardview_default_margin"
        android:theme="@style/Base.Theme.AppCompat.Light"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/textView_blacklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_blacklist"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_blacklistDates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
