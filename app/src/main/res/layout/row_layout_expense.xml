<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/expense_row_indent"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expense_row_cardView"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/expense_row_indent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:id="@+id/expense_row_colorbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Category"
                    android:id="@+id/expense_row_category"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Description"
                    android:id="@+id/expense_row_description"
                    android:textStyle="italic"
                    android:layout_below="@+id/expense_row_company"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="&lt;N> owes  &lt;$>"
                    android:id="@+id/expense_row_split"
                    android:layout_below="@+id/expense_row_cost"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentLeft="false"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Date"
                    android:id="@+id/expense_row_date"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/expense_row_category" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Paid By"
                    android:id="@+id/expense_row_paidby"
                    android:layout_marginRight="5dp"
                    android:layout_toStartOf="@+id/expense_row_paidby_who"
                    android:textColor="#000000"
                    android:layout_alignBottom="@+id/expense_row_paidby_who" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="&lt;name>"
                    android:id="@+id/expense_row_paidby_who"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="false"
                    android:layout_toLeftOf="@+id/expense_row_cost"
                    android:layout_marginRight="5dp"
                    android:layout_alignBottom="@+id/expense_row_cost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$0.00"
                    android:id="@+id/expense_row_cost"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Company"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:scrollHorizontally="true"
                    android:id="@+id/expense_row_company"
                    android:gravity="left|center_vertical"
                    android:textColor="#000000"
                    android:layout_below="@+id/expense_row_repeat"
                    android:layout_alignParentStart="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/expense_row_repeat"
                    android:textColor="#000000"
                    android:layout_below="@+id/expense_row_date"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone"
                    android:hint="Repeat" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


</RelativeLayout>