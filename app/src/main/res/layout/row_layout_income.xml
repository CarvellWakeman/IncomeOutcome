<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/income_row_indent"
        android:visibility="gone"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/income_row_cardView"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/income_row_indent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/income_row_colorbar"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/info_nocategory"
                android:id="@+id/expense_row_category"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/info_nodescription"
                android:id="@+id/income_row_description"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_below="@+id/income_row_repeat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/income_row_date"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/income_row_receivedfrom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Received from"
                android:id="@+id/income_row_receivedfrom"
                android:layout_marginRight="4dp"
                android:textColor="#000000"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_below="@+id/income_row_cost"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/info_noname"
                android:id="@+id/income_row_paidBy_who"
                android:textColor="#000000"
                android:layout_alignParentEnd="false"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$0.00"
                android:id="@+id/income_row_cost"
                android:textColor="#000000"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_below="@+id/income_row_paidBy_who" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/income_row_repeat"
                android:textColor="#000000"
                android:layout_below="@+id/income_row_date"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:visibility="gone"
                android:hint="Repeat" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>