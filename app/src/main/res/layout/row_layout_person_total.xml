<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_expense_title"
        android:elevation="25dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$0.00"
                android:id="@+id/income_total_cost"
                android:layout_toRightOf="@+id/expense_personB"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/balance_uneven"
                android:id="@+id/expense_who_owes_who"
                android:layout_marginRight="4dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="false"
                android:layout_alignBottom="@+id/income_total_cost"
                android:layout_alignTop="@+id/income_total_cost"
                android:gravity="center_vertical|center_horizontal"
                android:layout_toRightOf="@+id/income_total_source"
                android:layout_marginLeft="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/income_total_cost"
                android:id="@+id/relativeLayout_expense_moreinfo"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personB_debt"
                    android:layout_below="@+id/expense_personB_spent"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personB_spent"
                    android:layout_alignTop="@+id/expense_personA_spent"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personA_total"
                    android:layout_alignTop="@+id/expense_total1"
                    android:layout_alignStart="@+id/expense_personA_spent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personA_spent"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/expense_spent1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total:"
                    android:id="@+id/expense_total1"
                    android:layout_alignParentBottom="false"
                    android:layout_alignStart="@+id/expense_debt1"
                    android:layout_below="@+id/expense_debt1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personB_total"
                    android:layout_below="@+id/expense_personB_debt"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Debt:"
                    android:id="@+id/expense_debt1"
                    android:layout_below="@+id/expense_spent1"
                    android:layout_alignStart="@+id/expense_spent1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Spent:"
                    android:id="@+id/expense_spent2"
                    android:layout_alignTop="@+id/expense_personB_spent"
                    android:layout_toStartOf="@+id/expense_personB_debt"
                    android:layout_toLeftOf="@+id/expense_personB_spent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total:"
                    android:id="@+id/expense_total2"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/expense_debt2"
                    android:layout_toLeftOf="@+id/expense_personB_total" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Debt:"
                    android:id="@+id/expense_debt2"
                    android:layout_below="@+id/expense_spent2"
                    android:layout_toStartOf="@+id/expense_personB_debt"
                    android:layout_toLeftOf="@+id/expense_personB_debt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="$$$"
                    android:id="@+id/expense_personA_debt"
                    android:layout_alignTop="@+id/expense_debt1"
                    android:layout_alignStart="@+id/expense_personA_spent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Spent:"
                    android:id="@+id/expense_spent1"
                    android:layout_marginLeft="2dp"
                    android:layout_alignBaseline="@+id/expense_personA_spent"
                    android:layout_alignBottom="@+id/expense_personA_spent" />

            </RelativeLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_expense_expand"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:button="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:buttonTint="#000000"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="&lt;PersonA>"
                android:id="@+id/income_total_source"
                android:layout_alignTop="@+id/income_total_cost"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/income_total_cost"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="&lt;PersonB>"
                android:id="@+id/expense_personB"
                android:gravity="center_vertical"
                android:layout_alignParentTop="false"
                android:layout_toEndOf="@+id/income_total_source"
                android:layout_toRightOf="@+id/expense_who_owes_who"
                android:layout_alignTop="@+id/income_total_cost"
                android:layout_alignBottom="@+id/income_total_cost" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>