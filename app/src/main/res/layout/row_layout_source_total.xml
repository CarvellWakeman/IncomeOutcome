<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_income_title"
        android:elevation="25dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$0.00"
                android:id="@+id/income_total_cost"
                android:layout_marginLeft="4dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/income_total_source" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="&lt;Source>"
                android:id="@+id/income_total_source"
                android:layout_alignTop="@+id/income_total_cost"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/income_total_cost"
                android:gravity="center_vertical" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>