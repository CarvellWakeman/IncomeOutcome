<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_text_underline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_api19"
    android:clickable="true">

    <ImageView
        android:id="@+id/row_layout_text_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_account_white_24dp"
        android:tint="@color/turquoise" />

    <LinearLayout
        android:id="@+id/linearLayout_layout_text_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/row_layout_text_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_layout_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/row_layout_text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_subtitle"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/row_layout_text_subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_subtitle"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/gray"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/row_layout_text_secondicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_check_white_24dp"
        android:tint="@color/turquoise"
        android:visibility="gone"/>

    <View
        android:id="@+id/transaction_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/linearLayout_layout_text_titles"
        android:background="@android:color/darker_gray" />

</RelativeLayout>